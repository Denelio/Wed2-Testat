<html>
    <form action='/note' method='get'><input type='submit' id='createNote' value='Create new Note'></form>
    <select>
        <option value="light">Light-Mode</option>
        <option value="dark">Dark-Mode</option>
    </select>
    <button id="byFinishButton">By finish Date</button>
    <button id="byCreatedButton">By created Date</button>
    <button id="byImportanceButton">By Importance</button>
    <button id="showFinishedButton">Show Finished</button>
    {{#each note}}
        <div id="note">
            <h2>{{title}}</h2>
            <div>{{content}}</div>
            <div>
                {{#times importance}}
                    <span>*</span>
                {{/times}}
            </div>
            <p><a href='/note/{{_id}}/'>Edit</a></p>

        </div>

    {{/each}}
</html>
