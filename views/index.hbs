<header>
    <div id="newNote">
        <form action='/note' method='get'><input type='submit' id='createNote' value='Create new Note'></form>
    </div>
    <div class="theme-switch">
        <a href="?theme={{#equal theme "dark"}}light {{else}}dark {{/equal}}"> {{#equal theme "dark"}}
        Light mode {{else}}Dark mode {{/equal}}</a>
    </div>
</header>
<section class="sortButtons">
        <a href="?sort=date_due&orientation={{#equal orientation "ascending"}}descending{{else}}ascending{{/equal}}">By finish Date</a>
        <a href="?sort=date&orientation={{#equal orientation "ascending"}}descending{{else}}ascending{{/equal}}">By created Date</a>
        <a href="?sort=importance&orientation={{#equal orientation "ascending"}}descending{{else}}ascending{{/equal}}">By Importance</a>
    <a class="showFinished" href="?state={{#equal state "active"}}all {{else}}active {{/equal}}"> {{#equal state "active"}}Show Finished{{else}}Hide Finished{{/equal}}</a>
</section>
<main>
    {{#if note}}
        {{#each note}}
            <div class="note">
                <time class="noteDueDate" datetime="{{moment note.date_due format='DD-MM-YYYY'}}">{{#moment date "to" date_due }}{{date_due}}{{/moment}}</time>
                <div class="noteTitle"><h3>{{title}}</h3></div>
                <div class="noteImportance">
                    {{#times importance}}
                        <span>*</span>
                    {{/times}}
                </div>
                <div class="noteState">{{state}}</div>
                <textarea class="noteContent" readonly>{{content}}</textarea>
                <a class="noteEdit" href='/note/{{_id}}/'>Edit</a>

            </div>
        {{/each}}
    {{else}}
        <div id="noNote">No notes found.</div>
    {{/if}}
</main>
